pipeline {
    agent any
    stages {
        stage('Test1') {
            when {
                branch 'main'
            }
            parallel {
                stage('TESTING1') {
                    agent { label 'branch1' } 
                    steps {
                        sh 'echo "This is a TESTING1 stage"'
                        sh 'sleep 5'
                    }
                }
                stage('TESTING2') {
                    agent { label 'branch1' } 
                    steps {
                        sh '''
                            echo "This is a TESTING2 stage"
                            sleep 5
                        '''
                    }
                }
            }  
        }
    }
}
